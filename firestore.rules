// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // CONTACT FORM MESSAGES
    match /messages/{docId} {
      // Anyone can submit a new message
      allow create: if true;
      // Anyone can read messages (optional â€” you can remove if you want privacy)
      allow read: if true;
      // Only signed-in users (you) can update or delete
      allow update, delete: if request.auth != null;
    }

    // PROJECTS SECTION
    match /projects/{docId} {
      // Everyone can view your projects
      allow read: if true;
      // Only signed-in users (you) can add/edit projects
      allow write: if request.auth != null;
    }
  }
}
